@model Library.Models.Author

@{
    ViewBag.Title = "Редактирование информации об авторе";
}

<h1>Редактирование информации об авторе</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-size: 15px;">
        <hr style="border: 0.5px solid #828282;" />
        @Html.HiddenFor(model => model.AuthorId)

        @Html.Label("Фамилия")
        <div class="form-group">
            <div class="col-md-10" style="">
                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "textbox", style = "width: 400px;" } })
            </div>
        </div>

        @Html.Label("Имя")
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "textbox", style = "width: 400px;" } })
            </div>
        </div>

        @Html.Label("Отчество")
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "textbox", style = "width: 400px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<form action="\Author\All">
    <input type="submit" value="Назад" class="btn btn-default" style="width: 102px; margin-top: -5px;" />
</form>
<br>