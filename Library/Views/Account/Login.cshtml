@model Library.Models.LoginModel

@{
    ViewBag.Title = "Авторизация";
}

<center>
    <h1 style="padding-top: 30px; margin-bottom: -20px; text-align: center; font-family:'Ekaterina Velikaya Two'; font-size: 60px; font-weight:600;">Авторизация</h1>
    <br /><br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="font-size: 15px;">
            <hr style="border: 1px solid #828282">
            @Html.ValidationSummary(true, "", new { style = "color: red; font-weight: 600;"})

            @Html.Label("Логин")
            <div class="form-group">
                <div class="">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                    @Html.ValidationMessageFor(model => model.Login)
                </div>
            </div>

            @Html.Label("Пароль")
            <div class="form-group">
                <div class="">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <input type="submit" value="Войти" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</center>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}