@model Library.Models.Reader

@{
    ViewBag.Title = "Изменение данных";
}

<center>
<h1>Изменение данных</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-size: 15px;">
        <hr style="border: 0.5px solid #828282;" />
        @Html.HiddenFor(model => model.ReaderId)
        @Html.HiddenFor(model => model.Birth)
        @Html.HiddenFor(model => model.Login)
        @Html.HiddenFor(model => model.Password)
        @Html.HiddenFor(model => model.RoleId)

        @Html.Label("Фамилия")
        <div class="form-group">
            <div class="" style="">
                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "textbox", style = "width: 200px;" } })
            </div>
        </div>

        @Html.Label("Имя")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "textbox", style = "width: 200px;" } })
            </div>
        </div>

        @Html.Label("Отчество")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "textbox", style = "width: 200px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<form action="\Account\Personal">
    <input type="submit" value="Назад" class="btn btn-default" style="width: 102px; margin-top: -5px;" />
</form>
<br>
</center>