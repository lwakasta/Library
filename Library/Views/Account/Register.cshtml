@model Library.Models.RegisterModel

@{
    ViewBag.Title = "Регистрация";
}

<center>
<h1 style="padding-top: 30px; margin-bottom: -20px; text-align: center; font-family:'Ekaterina Velikaya Two'; font-size: 60px; font-weight:600;">Регистрация</h1>
<br /><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-size: 15px;">
        <hr style="border: 1px solid #828282">
        @Html.ValidationSummary(true)
        @Html.Label("Логин")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                <br />
                <p style="color: #ff0000; margin-bottom: -10px;">@Html.ValidationMessageFor(model => model.Login)</p>
            </div>
        </div>
        
        @Html.Label("Пароль")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                <br />
                <p style ="color: #ff0000; margin-bottom: -10px;">@Html.ValidationMessageFor(model => model.Password)</p>                
            </div>
        </div>
        
        @Html.Label("Подтверждение пароля")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })  
                <br />
                <p style="color: #ff0000; margin-bottom: -10px;">@Html.ValidationMessageFor(model => model.ConfirmPassword)</p>
            </div>
        </div>
        
        @Html.Label("Имя")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                <br />
                <p style="color: #ff0000; margin-bottom: -10px;">@Html.ValidationMessageFor(model => model.Name)</p>                
            </div>
        </div>
        
        @Html.Label("Фамилия")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                <br />
                <p style="color: #ff0000; margin-bottom: -10px;">@Html.ValidationMessageFor(model => model.Lastname)</p>                
            </div>
        </div>
        
        @Html.Label("Отчество")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                <br />
                <p style="color: #ff0000; margin-bottom: -10px;">@Html.ValidationMessageFor(model => model.Patronymic)</p>                
            </div>
        </div>
        
        @Html.Label("Дата рождения")
        <div class="form-group">
            <div class="">
                @Html.EditorFor(model => model.Birth, new { htmlAttributes = new { @class = "textbox", style = "width: 300px;" } })
                <br />
                <p style="color: #ff0000; margin-bottom: -10px;">@Html.ValidationMessageFor(model => model.Birth)</p>                
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Зарегистрироваться" class="btn btn-default" />
            </div>
        </div>
    </div>
}
</center>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}