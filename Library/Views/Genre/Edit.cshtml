@model Library.Models.Genre

@{
    ViewBag.Title = "Редактирование информации о жанре";
}

<h1>Редактирование информации о жанре</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-size: 15px;">
        <hr style="border: 0.5px solid #828282;" />
        @Html.HiddenFor(model => model.GenreId)

        @Html.Label("Наименование")
        <div class="form-group">
            <div class="col-md-10" style="">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "textbox", style = "width: 200px;" } })
            </div>
        </div>

        @Html.Label("Описание")
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "textbox", style = "width: 700px; height: 10.0em" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<form action="\Genre\All">
    <input type="submit" value="Назад" class="btn btn-default" style="width: 102px; margin-top: -5px;" />
</form>
<br>