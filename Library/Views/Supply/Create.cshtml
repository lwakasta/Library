@model Library.Models.Supply

@{
    ViewBag.Title = "Выдача книг";
}

<h1>Выдача книг</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-size: 15px;">
        <hr style="border: 1px solid #828282">
        
        @Html.Label("Дата")
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "textbox", style = "width: 150px;" } })
            </div>
        </div>

        @Html.Label("Читатель")
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ReaderId, ViewBag.Readers as SelectList, new { @class = "textbox", style = "width: 300px;" })
            </div>
        </div>

        @Html.Label("Книги")
        <div class="form-group">
            <div class="col-md-10">
                @Html.ListBoxFor(model => model.Books, ViewBag.Books as MultiSelectList, new { @class = "textbox", style = "width: 600px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<form action="\Supply\All">
    <input type="submit" value="Назад" class="btn btn-default" style="width: 84px; margin-top: -5px;" />
</form>
